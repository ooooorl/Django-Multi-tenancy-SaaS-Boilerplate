name: Build Django Artifact

on:
  push:
    branches: [master, staging]

jobs:
  build-artifact:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: 3.12

      - name: Install build tools
        run: |
          python -m pip install --upgrade pip
          pip install wheel setuptools twine

      - name: Install dependencies
        run: pip install -r requirements/production.txt

      - name: Run migrations (optional)
        run: python manage.py migrate --noinput

      - name: Build Python package
        run: |
          python setup.py sdist bdist_wheel

      - name: Authenticate AWS CodeArtifact
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: arn:aws:iam::<ACCOUNT-ID>:role/<GITHUB-OIDC-ROLE>
          aws-region: ap-southeast-1

      - name: Upload package to CodeArtifact
        run: |
          export TOKEN=$(aws codeartifact get-authorization-token \
            --domain <DOMAIN> \
            --domain-owner <ACCOUNT-ID> \
            --query authorizationToken --output text)
          pip config set global.index-url "https://aws:$TOKEN@<DOMAIN>-<ACCOUNT-ID>.d.codeartifact.ap-southeast-1.amazonaws.com/pypi/<REPO>/simple/"
          twine upload dist/*
